{% include "layout/head.njk" %}

{% include "layout/header.njk" %}

<main class="container py-20">
  <div class="max-w-2xl mb-24">
    <h1>{{ layout_about.heading }}</h1>
    {% markdown %}{{ layout_about.body | safe }}{% endmarkdown %}
  </div>

  <div class="">
    {% for member in layout_about.members %}
      {% team_member
          image=member.image,
          title=member.title,
          subtitle=member.job_title,
          bio=member.bio,
          facebook_url=member.social.facebook,
          twitter_url=member.social.twitter,
          instagram_url=member.social.instagram,
          className="mb-12"
      %}
    {% endfor %}
  </div>
</main>

